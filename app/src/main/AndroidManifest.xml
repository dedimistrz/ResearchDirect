    package="com.domain.rd.researchdirect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityROG"/>
        <activity android:name=".ActivityCE"/>
        <activity android:name=".ActivityNH"/>
        <activity android:name=".ActivityJC"/>
        <activity android:name=".ActivityAgora"/>
        <activity android:name=".ActivityRDM"/>
        <activity android:name=".ActivityMyAccount"/>
        <activity android:name=".ActivityHome"/>
        <activity android:name=".ActivityLogout"/>
        <activity android:name=".ActionBarSearchView"/>
    </application>
    <intent-filter>
        <action android:name="android.intent.action.SEARCH" />
    </intent-filter>
    <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/searchable" />

</manifest>
